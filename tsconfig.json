{
  "compilerOptions": {
    
    "rootDir": "./src", 
    "outDir": "./dist", 

    
    "target": "ES2020",      
    "module": "ES2020",      
    "moduleResolution": "node", 
    
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}